manifest {
    mainScript = "main.nf"
    defaultBranch = "master"
    nextflowVersion = ">=20.07"
}



params {
    conda_env = "tspg"

    input_dir = "input"
    train_data = "example.train.emx.txt"
    train_labels = "example.train.labels.txt"
    perturb_data = "example.perturb.emx.txt"
    perturb_labels = "example.perturb.labels.txt"
    gmt_file = "example.genesets.txt"
    target_class = "class-00"

    output_dir = "output"
}



report {
    enabled = true
    file = "${params.output_dir}/reports/report.html"
}



timeline {
    enabled = true
    file = "${params.output_dir}/reports/timeline.html"
}



trace {
    enabled = true
    fields = "task_id,hash,native_id,process,tag,name,status,exit,module,container,cpus,time,disk,memory,attempt,submit,start,complete,duration,realtime,queue,%cpu,%mem,rss,vmem,peak_rss,peak_vmem,rchar,wchar,syscr,syscw,read_bytes,write_bytes,vol_ctxt,inv_ctxt,workdir,scratch,error_action"
    file = "${params.output_dir}/reports/trace.txt"
    raw = true
}



docker {
    runOptions = "--init --gpus all"
}



singularity {
    runOptions = "--nv"
    autoMounts = true
}



process {
    container = "systemsgenetics/tspg"
}



profiles {
    conda {
        process.beforeScript = "source activate ${params.conda_env}"
    }

    docker {
        docker.enabled = true
    }

    palmetto {
        process {
            executor = "pbspro"
            time = 24.h
            clusterOptions = "-l select=1:ncpus=2:mem=8gb"

            withLabel:gpu {
                clusterOptions = "-l select=1:ncpus=2:mem=16gb:ngpus=1:gpu_model=p100"
            }
        }
        executor {
            queueSize = 50
        }
    }

    singularity {
        singularity.enabled = true
    }

    standard {
        process.executor = "local"
    }

    testing {
        process.errorStrategy = "terminate"
    }
}
